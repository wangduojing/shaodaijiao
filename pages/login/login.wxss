/* pages/login/login.wxss */
.contain{
	width: 100%;
}
.sign{
	width: 78%;
	margin: 82rpx auto 0;
	color: #333;
	font-size: 30rpx;
}
.sign input{
	line-height: 100rpx;
	height: 100rpx;
	border-bottom: 1px solid #e0e0e0;
}
.sign .sign-input{
	width: 100%;
	position: relative;
}
.sign .sign-input image{
	position:absolute;
	right:0;
	bottom:0;
	width:26rpx;
	height:50rpx;
}
.sign-input .getnum{
	position:absolute;
	right:0;
	bottom:24rpx;
	font-size: 28rpx;
	padding:10rpx 20rpx;
	line-height:30rpx;
	border: 1px solid;
	background: #fff;
	border-radius: 40rpx;
}
.sign-btn{
	width:90%;
	line-height:80rpx;
	color:#fff;
	font-size: 32rpx;
	border-radius: 40rpx;
	letter-spacing:4rpx;
	margin:212rpx auto 22rpx;
}
.argee {
	line-height: 56rpx;
	font-size: 26rpx;
	margin-left: 40rpx;
	color: #666;
}
.argee checkbox{
	font-size:20rpx;
	vertical-align: top;
	line-height: 50rpx;
}
checkbox .wx-checkbox-input{
    border-radius: 6rpx;
    height: 24rpx;
    width: 24rpx;
    font-size: 30rpx;
	
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
    height: 38rpx;
    width: 38rpx;
    font-size: 30rpx;
    border-radius: 8rpx;
    text-align: center;
    line-height: 40rpx;
    background-color: #1cbc9c;
    color:#fff;    
}

















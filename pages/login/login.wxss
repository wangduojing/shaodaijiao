/* pages/login/login.wxss */

.contain {
    width: 100%;
}

.logintype {
    width: 78%;
    margin: 20rpx auto 0;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
}
.logintype view{
	width: 50%;
	line-height: 80rpx;
	text-align:  center;
}
.base_bordercolor{
	border-bottom: 4rpx solid;
}
.base_bordercolor{
	border-color: #1cbc9c;
}
.sign {
    width: 78%;
    margin: 30rpx auto 0;
    color: #333;
    font-size: 30rpx;
}

.sign input {
    line-height: 100rpx;
    height: 100rpx;
    border-bottom: 1px solid #e0e0e0;
    z-index: 2;
}

.sign .sign-input {
    width: 100%;
    position: relative;
}

.sign .sign-input .icon-guanbi {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 26rpx;
    height: 70rpx;
    z-index: 3;
}

.sign .sign-input view {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 90rpx;
    height: 64rpx;
}

.sign .sign-input view image {
    float: left;
    height: 70rpx;
}

.sign-input .getnum {
    position: absolute;
    right: 0;
    bottom: 24rpx;
    font-size: 28rpx;
    padding: 10rpx 20rpx;
    line-height: 30rpx;
    border: 1px solid;
    background: #fff;
    border-radius: 40rpx;
    z-index: 4;
}

.sign-btn {
    width: 90%;
    line-height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    border-radius: 40rpx;
    letter-spacing: 4rpx;
    margin: 160rpx auto 22rpx;
}

.argee {
    line-height: 56rpx;
    font-size: 26rpx;
    margin-left: 40rpx;
    color: #666;
}

.argee checkbox {
    font-size: 20rpx;
    vertical-align: top;
    line-height: 50rpx;
}

checkbox .wx-checkbox-input {
    border-radius: 6rpx;
    height: 24rpx;
    width: 24rpx;
    font-size: 30rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    height: 38rpx;
    width: 38rpx;
    font-size: 30rpx;
    border-radius: 8rpx;
    text-align: center;
    line-height: 40rpx;
    background-color: #1cbc9c;
    color: #fff;
}

.argee text {
    font-weight: 600;
}

.hidden {
    opacity: 0;
}

.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, 0.75);
    border-radius: 20px;
    text-align: center;
    font-size: 30rpx;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}

.fade-in {
    animation: fadeIn 0.3s forwards;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        -webkit-transform: translate3d(0, 100%, 0);
        transform: translate3d(0, 100%, 0);
    }

    to {
        opacity: 1;
        -webkit-transform: none;
        transform: none;
    }
}

.sign-input view {
    z-index: 3;
}

.icon-mimabukejian, .icon-mimakejian {
    z-index: 4;
    width: 50rpx;
}
.otherhelp{
	width: 98%;
    margin: 16rpx auto 0;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
}
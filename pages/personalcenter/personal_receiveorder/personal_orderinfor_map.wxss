/* pages/personalcenter/personal_receiveorder/personal_orderinfor_map.wxss */

page {
    width: 100%;
    height: 100%;
    background: #eee;
}

.map {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 568rpx;
    margin: auto;
    z-index: 0;
}

.contain {
    position: fixed;
    top: 368rpx;
    left: 30rpx;
    width: 688rpx;
    height: 830rpx;
	overflow: hidden;
	overflow-y: scroll;
    z-index:9999;

}

.common-row {
    width: 656rpx;
    padding: 0 18rpx;
    background: #fff;
    margin-bottom: 2rpx;
}

.information {
    margin: 14rpx auto 0;
    font-size: 22rpx;
    line-height: 58rpx;
    border-bottom: 2rpx solid #eee;
}

.information .number {
    width: 100%;
    display: flex;
    justify-content: space-between;
	
}
.information .number cover-view{
	line-height: 48rpx;
}
.information .number cover-view text {
    font-size: 20rpx;
}

.information .number .mark {
    height: 28rpx;
    font-size: 20rpx;
    border-radius: 20rpx;
    line-height: 28rpx;
    padding: 2rpx 10rpx;
    background: #e5f5e5;
    border: 2rpx #ff7e45 solid;
    margin-right: 9rpx;
    vertical-align: middle;
    margin-top: 9rpx;
    background: #fde9dd;
    color: #ff7e45;
}

.address {
    line-height: 24rpx;
}

.address .addtitle {
    font-size: 22rpx;
    color: #999;
    padding-top: 18rpx;
    clear: both;
}

.address .addtitle .persondot{
	margin-top: 10rpx;
    border: 6rpx solid #ff7e45;
    border-radius: 100%;
    float: left;
    margin-right: 12rpx;
}

.receive.addtitle .persondot {
    border: 6rpx solid #8ac306;
}

.address .address-infor {
    color: #333;
    font-size: 23rpx;
    height: 92rpx;
    line-height: 38rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.time {
    padding: 15rpx 18rpx;
}

.send-time {
    color: #999;
    font-size: 21rpx;
}

.progress {
    margin: 14rpx auto 2rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    line-height: 88rpx;
    font-size: 24rpx;
    overflow: hidden;
}

.progress cover-view {
    float: left;
	line-height: 88rpx;
}

.progress .textright {
    float: right;
    color: #1cbc9c;
    margin-right: 10rpx;
}

.progress .icon-xiala1 {
    float: right;
	width:40rpx;
	border: none;
	background: #fff;
}

.progress icon::before {
    color: #1cbc9c;
}

.progerss-time {
    margin: 0;
    font-size: 20rpx;
    padding: 15rpx 18rpx;
    line-height: 50rpx;
}

.goods-infortit {
    margin: 14rpx auto 2rpx;
}

.goods-infor cover-view {
    font-size: 24rpx;
    line-height: 68rpx;
    color: #333;
}

.goods-infor cover-view cover-view {
    color: #999;
    margin-right: 20rpx;
	float:left;
}

.photo {
    height: 116rpx;
}

.photo cover-view {
    line-height: 116rpx;
    float: left;
}

.photo cover-image {
    border: 2rpx solid #999;
    width: 116rpx;
    height: 80rpx;
    margin: 18rpx 22rpx 0 0;
}

.progerss-time cover-view{
	line-height: 48rpx;
}

.personal-infor {
    height: 130rpx;
    margin-top: 22rpx;
    border-bottom: 2rpx dashed #a8a8a8;
}

.personal-infor .personal-photo {
    float: left;
    width: 80rpx;
    height: 80rpx;
    border: 2rpx solid #999;
    border-radius: 100%;
    margin: 34rpx 13rpx auto 0;
}

.personal-infor .infor cover-view {
    float: left;
    margin-top: 20rpx;
}

.personal-infor .infor cover-view text {
    display: block;
    color: #333;
    font-size: 24rpx;
    line-height: 30rpx;
    margin-bottom: 13rpx;
}

.personal-infor .infor {
    overflow: hidden;
    height: 128rpx;
}

.personal-infor .infor cover-view icon.icon-shimingrenzheng::before {
    font-size: 88rpx;
}

.personal-infor .infor cover-view.icon-dianhua {
	float: right;
	margin-top: 42rpx;
}

.personal-infor cover-view.icon-dianhua::before {
    font-size: 46rpx;
    color: #666;
}

.personal-infor .get-number {
    width: 656rpx;
    margin: auto;
    padding: 0 30rpx;
    height: 114rpx;
    background: #fff;
}

.get-number {
    height: 115rpx;
    line-height: 115rpx;
}

.get-number cover-view {
    float: left;
    font-size: 23rpx;
    color: #333;
	line-height:115rpx;
}

.get-number .sent-number {
    float: right;
    width: 160rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 40rpx;
    padding: 0;
	background: #1cbc9c;
    color: #fff;
    font-size: 23rpx;
    margin-top: 32rpx;
	text-align: center;
}

.hide {
    display: none;
}

.show {
    display: block;
}

.wait-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.wait-btn button {
    float: left;
    width: 50%;
    border: none;
    border-radius: 0;
    color: #fff;
    line-height: 88rpx;
    font-size: 30rpx;
}

.wait-btn .edit-btn {
    background: #fff;
    color: #ff7e45;
    border-radius: 0;
}

.fee {
    height: 88rpx;
    line-height: 88rpx;
}

.fee .fee-money {
    float: left;
    font-size: 24rpx;
    color: #ff7e45;
	line-height: 88rpx;
}

.fee .fee-money te {
    margin-right: 14rpx;
}

.fee .fee-time {
    float: right;
    color: #999;
    font-size: 18rpx;
	line-height: 88rpx;
}

.fee .fee-infor {
    float: left;
    font-size: 19rpx;
    color: #999;
    margin-left: 24rpx;
	line-height: 88rpx;
}

.cancel-order {
    margin: 160rpx auto 0;
    width: 100%;
}

.cancel-order button {
    width: 682rpx;
    height: 82rpx;
    line-height: 82rpx;
    color: #fff;
    border-radius: 40rpx;
    font-size: 30rpx;
	text-align: center;
}
/* map */
.distance{
	width: 170rpx;
	height:36rpx;
	line-height: 36rpx;
	font-size: 20rpx; 
	background: rgba(0, 0, 0, 0.2);
	color: #fff;
	border-radius: 4rpx;
	position: absolute;
	top: 330rpx;
	right: 30rpx;
	text-align: center;
}
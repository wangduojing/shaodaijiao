/* pages/personalcenter/personalcenter.wxss */
.contain{
	width: 100%;
	height: 100%;
	background: #eee;
}
.top{
	width: 100%;
	height: 274rpx;
	background: #f9f9f9;
	position: relative;
}
.top .personal-img{
	width: 146rpx;
	height: 146rpx;
	border: 2rpx solid #d1d1d1;
	border-radius: 100%;
	margin: 0 auto;
}
.top button{
	width: 134rpx;
	height: 36rpx;
	line-height: 36rpx;
	font-size: 22rpx;
	border: none;
	border-radius: 20rpx;
	padding: 0;
	margin-top: 44rpx;
	color: #fff;
}
.top view{
	text-align: center;
	font-size: 28rpx;
	font-weight: 600;
	margin-top: 43rpx;
}
.top view text{
	margin-left: 16rpx;
	font-style:italic;
}
.top .icon-active-you{
	position: absolute;
	right: 32rpx;
	bottom: 106rpx;
}
.cargo-trip{
	background: #fff;
}
.cargotrip-list{
	margin: 20rpx 42rpx 0;
}
.cargotrip-list .iconfont{
	margin-right: 24rpx;
}
.cargotrip-list view{
	line-height: 108rpx;
	border-bottom: 2rpx solid #eee;
	color: #333;
	font-size: 28rpx;
}
.cargotrip-list .icon-dayuhao{
	float: right;
	margin-right: 0;
}
.icon-dayuhao::before{
	color: #ccc;
}
.cargotrip-list view.last{
	border: none;
}
.accept text{
	float: right;
	color: #666;
	margin-right: 14rpx;
}
.person-last-list{
	margin-bottom: 33rpx;
}
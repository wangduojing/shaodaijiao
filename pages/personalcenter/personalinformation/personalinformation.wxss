/* pages/personalcenter/personalinformation/personalinformation.wxss */
.contain{
	width: 100%;
	height: 100%;
}
.personinforlist{
	margin-top: 20rpx;
	width: 100%;
	height: auto;
	overflow: hidden;
	background: #fff;
	border-top: 20rpx solid #eee;
}
.personinforlist view{
	line-height: 89rpx;
	border-bottom: 2rpx solid #eee;
	margin: 0 34rpx 0;
	color: #333;
	font-size: 24rpx;
}
.personinforlist view image{
	float: right;
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
	margin-top: 10rpx;
}
.personinforlist view input{
	float: right;
	height: 70rpx;
	text-align: right;
	margin-top: 10rpx;
}
.btn{
	width: 100%;
	height: 260rpx;
	background: #eee;
	padding-top:104rpx;
}
button{
	color: #fff;
	width: 400rpx;
	height: 80rpx;
	border-radius: 40rpx;	
}
.placeholder-color{
	color: #999;
}
.chose-picker{
	position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 360rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
    font-size: 30rpx;
}
.distpicker-btn{
	width: 90%;
	height: 68rpx;
	padding: 0 5%;
	display: flex;
    justify-content: space-between;
	line-height: 68rpx;
	border: 2rpx solid #eee;
	border-left:none;
	border-right:none;
}
.chose-picker picker-view{
	width: 100%; 
	height: 100px;
	text-align: center;
}
.chose-picker picker-view-column{
	line-height: 60rpx;
}
<!--pages/publish/cargo/general.wxml-->
<!--pages/publish/cargo/fastpublish.wxml-->
<!--order.wxml-->
<view class="container">
    <view class='chose'>
        <view class='sdj-fast'>
			<text bindtap='fastpublish'>急捎</text>
		</view>
		<view class='chose-line'></view>
        <view class='sdj-general'>
			<text>普通捎</text>
		</view>
    </view>
    <view class='star-end'>
        <view class='star'>
            <view><view class='starpoint'></view><text>发件人信息</text></view>
            <input bindtap='sendinfor' placeholder='点击添加发件人信息' placeholder-class='plhcolor'/>
			<image class='iconfont icon-dayuhao'></image>
        </view>
        <view class='star end'>
            <view><view class='endpoint'></view><text>收件人信息</text></view>
			<input bindtap='sendinfor' placeholder='点击添加收件人信息' placeholder-class='plhcolor'/>
			<image class='iconfont icon-dayuhao'></image>
        </view>
    </view>
	<view class='fullin-infor'>
        <text>预约收件时间段</text>
		<image class='iconfont icon-dayuhao'></image>
		<input value='12月25日  22：20 -  22：30'/>    
    </view>
	<view class='bottom-line'></view>
	<view class='fullin-infor'>
        <text>最晚送达时间</text>
		<image class='iconfont icon-dayuhao'></image>
		<input value='12月25日  22：20 -  22：30'/>    
    </view>
	<view class='bottom-line'></view>
   <view class='fullin-infor'>
        <text>物品信息</text>
        <image class='iconfont icon-dayuhao'></image>
    </view>
	<view class='bottom-line'></view>
    <view class='thankfee'>
        <text>感谢费</text>
        <image class='iconfont'></image>
        <input type='number' placeholder-class='plhcolor' placeholder='可以更快被抢单哦 '/>
    </view>
	<view class='bottom-line'></view>
    <view class='thankfee remark'>
        <text>捎话</text>
        <image class='iconfont icon-dayuhao'></image>
		<input value='价格好商量，快点来接单快点来接单快点来接单快点来'/>
    </view>
	<view class='fullin-infor tool'></view>
    <button>立即下单</button>
</view>


/* pages/publish/cargo/goodsinfor.wxss */

.goods-type {
    line-height: 78rpx;
}

.commontit {
    margin-left: 17rpx;
    line-height: 78rpx;
    font-size: 24rpx;
}

.commontit text {
    color: #666;
}

.goods-type text {
    color: #333;
    margin-left: 6px;
}

.goods-list {
    width: 680rpx;
    height: auto;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
    padding-bottom: 8rpx;
}

.goods-list view {
    width: 154rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 22rpx;
    border-radius: 10rpx;
    color: #999;
    text-align: center;
    margin-bottom: 20rpx;
}

.goods-list view {
    border: 2rpx solid #edecec;
}

.goods-list .blank {
    border: none;
}

.border-bg {
    border: 15rpx #eee solid;
}

.goods-name {
    margin-left: 36rpx;
}

.goods-name input, .goods-name icon {
    float: right;
    margin-right: 30rpx;
}

.goods-name input {
    width: 490rpx;
    margin-top: 14rpx;
    margin-right: 5rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goods-name .icon-quxiao:before {
    font-size: 30rpx;
}

.tip {
    color: #ff761a;
    background: #f7e6dc;
    line-height: 46rpx;
    font-size: 17rpx;
    text-align: center;
}

.price view {
    width: 216rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 22rpx;
    border-radius: 10rpx;
    color: #999;
    text-align: center;
    margin-bottom: 20rpx;
}

.goods-face {
    padding-left: 17rpx;
    line-height: 90rpx;
    font-size: 24rpx;
    border-bottom: 2rpx #eee solid;
}

.goods-face text {
    color: #666;
    margin-left: 6px;
}

.goods-face input {
    float: right;
    margin: 14rpx 5rpx 0 0;
}

.goods-face icon {
    float: right;
    margin-right: 30rpx;
}

.goods-v, .goods-photo {
    padding-left: 34rpx;
}

.goods-v .goods-v-text {
    float: right;
    margin-top: 4rpx;
}

.goods-v input {
    float: left;
    width: 140rpx;
    text-align: right;
}

.goods-v .hide-range {
    float: left;
    border: none;
    margin: auto;
    line-height: 80rpx;
}

.goods-v view view {
    float: left;
    line-height: 43rpx;
    font-size: 22rpx;
    padding: 0rpx 9rpx;
    margin: 24rpx 8rpx;
    color: #666;
    border: 2rpx solid #eee;
    border-radius: 8rpx;
}

.goods-v .chose text {
    float: left;
    margin-right: 26rpx;
}

.goods-v .chose {
    float: right;
    margin-right: 34rpx;
}

.goods-v .activestyle {
    color: #fff;
    background: #2ac661;
}
.goods-photo{
	height: 116rpx;
	line-height: 116rpx;
	width: 100%;
	overflow: hidden;
}
.goods-photo .click-onload{
	float: right;
	margin-right: 76rpx;
	padding-top: 18rpx;
}
.goods-photo image{
	width: 115rpx;
	height: 79rpx;
}

.submit {
    width: 100%;
    height: 140rpx;
    background: #eee;
    padding-top: 51rpx;
}

.submit button {
    width: 520rpx;
    line-height: 80rpx;
    font-size: 27rpx;
    color: #fff;
    border-radius: 40rpx;
}

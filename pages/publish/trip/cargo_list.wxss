page {
	height: 100%;
}
.to_publish{
	height: 62rpx;
	background-color: #e7faff;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	text-align: center;
}
.to_publish_left {
	width: 93%;
}
.to_publish_right {
	width: 7%;
}
image {
	width: 30rpx;
	height: 30rpx;
}
.cargo_list {
	width: 100%;
	height: 1060rpx;
}
.cargo_item_division {
	height: 12rpx;
	background-color: #eeeeee;
}
.cargo_item {
	width: 88%;
	height: 355rpx;
	background-color: #ffffff;
	margin: 0rpx auto;
}
.item_head {
	height: 154rpx;
	border: 1rpx red solid;
}
.item_body {
	height: 300rpx;
}
.item_bottom {
	height: 95rpx;
}
.item_head_left_left {
	width: 80rpx;
	height: 80rpx;
	margin-top: 12rpx;
	margin-left: 35rpx;
	float: left;
}
.item_head_left_right {
	margin-top: 12rpx;
	margin-left: 26rpx;
	height: 80rpx;
	width: 250rpx;
	float: left;
	font-size: 19rpx;
}
.item_head_left_right view:first-child {
	font-size: 24rpx;line-height: 24rpx;
}
.item_head_left_right image {
	height: 20rpx;
	width: 75rpx;
	line-height: 20rpx;
	margin: 8rpx 0rpx;
}
.item_head_right{
	margin-top: 12rpx;
	float: right;
	width: 38rpx;
	height: 80rpx;
	display: flex;
	align-items: center;
}
.item_body {
	height: 150rpx;
	line-height: 150rpx;
}
.item_body view {
	height: 30rpx;
	line-height: 30rpx;
}
.item_body view:nth-child(1) image {
	width: 60rpx;
	height: 30rpx;
}
.item_body view:nth-child(1) text {
	margin-left: 15rpx;
}
.item_body view:nth-child(2) {margin-top: 15rpx;}
.item_body view:nth-child(2) image {
	width: 30rpx;
	height: 30rpx;
}
.item_body view:nth-child(2) text {
	margin-left: 18rpx;
	line-height: 25rpx;
	font-size: 25rpx;
}
.item_body view:nth-child(3) {margin-top: 15rpx;}
.item_body view:nth-child(3) image {
	width: 30rpx;
	height: 30rpx;
}
.item_body view:nth-child(3) text {
	margin-left: 18rpx;
	line-height: 25rpx;
	font-size: 25rpx;
}
.item_body view:nth-child(4) {margin-top: 15rpx;}
.item_body view:nth-child(4) text {
	line-height: 20rpx;
	font-size: 20rpx;
}